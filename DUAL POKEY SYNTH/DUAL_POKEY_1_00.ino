				arpeggiatorOn = HIGH;
				mainLeadOneEngine(8,0,0,HIGH,0,0);
				arpeggiatorRunning = testArrayContentsForAtLeastTwoNotes(
					arpNoteNumberArray) ? HIGH : LOW;
